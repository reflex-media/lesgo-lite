{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "Config/*": ["src/config/*"],
      "Core/*": ["src/core/*"],
      "Exceptions/*": [
        "src/exceptions/*",
        "node_modules/lesgo/src/exceptions/*"
      ],
      "Handlers/*": ["src/handlers/*"],
      "Middlewares/*": [
        "src/middlewares/*",
        "node_modules/lesgo/src/middlewares/*"
      ],
      "Models/*": ["src/models/*"],
      "Services/*": [
        "src/services/*",
        "node_modules/lesgo/src/services/*"
      ],
      "Utils/*": [
        "src/utils/*",
        "node_modules/lesgo/src/utils/*"
      ]
    }
  },
  "exclude": ["node_modules", "dist", "config", "coverage"]
}
