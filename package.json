{
  "name": "lesgo-lite",
  "version": "1.1.0",
  "description": "An even lighter Node.js template for a simple REST API microservice project using the Serverless Framework",
  "scripts": {
    "start": "tsc && sls offline start --stage local --noAuth",
    "server": "sls offline start --stage local --env local",
    "watch": "tsc -w",
    "build": "tsc && lesgo-scripts -t build",
    "deploy": "lesgo-scripts -t deploy",
    "invoke": "lesgo-scripts -t invoke",
    "invoke-local": "lesgo-scripts -t invoke -l",
    "logs": "lesgo-scripts -t logs",
    "destroy": "lesgo-scripts -t destroy",
    "pretest": "eslint --ignore-path .gitignore .",
    "test": "tsc && jest",
    "coverage": "tsc && jest --coverage",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "eslint '**/*.{js,ts,jsx,tsx}' --quiet",
    "lint-fix": "eslint '**/*.{js,ts,jsx,tsx}' --fix",
    "dev-link": "rm -rf ../lesgo-framework/node_modules && npm link --no-save ../lesgo-framework",
    "dev-unlink": "npm uninstall --global lesgo",
    "dev-list": "npm ls -g --depth=0 --link=true"
  },
  "dependencies": {
    "lesgo": "github:reflex-media/lesgo-framework#feature/prep-v1.1",
    "middy": "xXLXx/middy-core#1.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.21.0",
    "@babel/register": "^7.21.0",
    "@types/aws-lambda": "^8.10.114",
    "@types/jest": "^29.5.0",
    "@types/lesgo": "^0.7.5",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "aws-lambda": "^1.0.7",
    "babel-loader": "^9.1.2",
    "babel-plugin-webpack-aliases": "^1.1.3",
    "coveralls": "^3.1.1",
    "enhanced-resolve": "^5.12.0",
    "eslint": "^8.37.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-html-reporter": "^3.7.1",
    "lint-staged": "^13.2.0",
    "newman": "^5.3.2",
    "path": "^0.12.7",
    "prettier": "^2.8.7",
    "serverless": "^3.29.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^12.0.4",
    "serverless-plugin-log-retention": "^2.0.0",
    "serverless-webpack": "^5.11.0",
    "source-map": "^0.7.4",
    "terser-webpack-plugin": "^5.3.7",
    "typescript": "^5.0.2",
    "webpack": "^5.76.3"
  },
  "author": "Sufiyan Rahmat <mosufy@gmail.com>",
  "license": "MIT",
  "engineStrict": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "prettier --write",
      "npm run lint",
      "git add"
    ]
  }
}
