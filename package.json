{
  "name": "lesgo-lite",
  "version": "0.6.2",
  "description": "An even lighter Node.js template for a simple REST API microservice project using the Serverless Framework",
  "scripts": {
    "start": "sls offline start --stage local --env local --skipCacheInvalidation",
    "server": "sls offline start --stage local --env local",
    "watch": "tsc -w",
    "build": "tsc && lesgo-scripts -t build",
    "deploy": "lesgo-scripts -t deploy",
    "invoke": "lesgo-scripts -t invoke",
    "invoke-local": "lesgo-scripts -t invoke -l",
    "logs": "lesgo-scripts -t logs",
    "destroy": "lesgo-scripts -t destroy",
    "pretest": "eslint --ignore-path .gitignore .",
    "test": "tsc && jest",
    "coverage": "jest --coverage",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls",
    "dev-link": "rm -rf ../lesgo-framework/node_modules && npm link --no-save ../lesgo-framework",
    "dev-unlink": "npm uninstall --global lesgo",
    "dev-list": "npm ls -g --depth=0 --link=true",
    "lint": "eslint '**/*.{js,ts,jsx,tsx}' --quiet",
    "lint-fix": "eslint '**/*.{js,ts,jsx,tsx}' --fix"
  },
  "dependencies": {
    "@middy/core": "^1.4.0",
    "lesgo": "^0.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.16",
    "@babel/register": "^7.12.1",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "aws-sdk": "^2.814.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-webpack-aliases": "^1.1.3",
    "coveralls": "^3.0.6",
    "enhanced-resolve": "^5.0.0-beta.4",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": ">=1",
    "jest": "^26.6.3",
    "jest-html-reporter": "^3.3.0",
    "lint-staged": ">=8",
    "path": "^0.12.7",
    "prettier": "^1.18.2",
    "serverless-dotenv-plugin": "^3.1.0",
    "serverless-offline": "^6.8.0",
    "serverless-plugin-log-retention": "^2.0.0",
    "serverless-webpack": "^5.3.5",
    "source-map": "^0.7.3",
    "terser-webpack-plugin": "^2.2.1",
    "typescript": "^4.1.5",
    "webpack": "^4.35.2",
    "webpack-cli": "^4.5.0"
  },
  "author": "Sufiyan Rahmat <mosufy@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "12.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "npm run lint",
      "git add"
    ]
  }
}
