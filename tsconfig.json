{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "Config/*": ["src/config/*"],
      "Core/*": ["src/core/*"],
      "Exceptions/*": [
        "src/exceptions/*",
        "node_modules/lesgo/src/exceptions/*",
        "node_modules/@types/lesgo/exceptions/*"
      ],
      "Handlers/*": ["src/handlers/*"],
      "Middlewares/*": [
        "src/middlewares/*",
        "node_modules/lesgo/src/middlewares/*",
        "node_modules/@types/lesgo/middlewares/*"
      ],
      "Models/*": ["src/models/*"],
      "Services/*": [
        "src/services/*",
        "node_modules/lesgo/src/services/*",
        "node_modules/@types/lesgo/services/*"
      ],
      "Utils/*": [
        "src/utils/*",
        "node_modules/lesgo/src/utils/*",
        "node_modules/@types/lesgo/utils/*"
      ]
    },
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": false,
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2018"],
    "rootDir": "./"
  },
  "exclude": ["node_modules", "dist", "config", "coverage", "**/*.spec.ts"]
}
