{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "Config/*": ["src/config/*"],
      "Core/*": ["src/core/*"],
      "Exceptions/*": [
        "src/exceptions/*",
        "../lesgo-framework/src/exceptions/*",
        "node_modules/lesgo/src/exceptions/*",
        "node_modules/@types/lesgo/exceptions/*"
      ],
      "Handlers/*": ["src/handlers/*"],
      "Middlewares/*": [
        "src/middlewares/*",
        "../lesgo-framework/src/middlewares/*",
        "node_modules/lesgo/src/middlewares/*",
        "node_modules/@types/lesgo/middlewares/*"
      ],
      "Models/*": ["src/models/*"],
      "Services/*": [
        "src/services/*",
        "../lesgo-framework/src/services/*",
        "node_modules/lesgo/src/services/*",
        "node_modules/@types/lesgo/services/*"
      ],
      "Types/*": ["src/types/*"],
      "Utils/*": [
        "src/utils/*",
        "../lesgo-framework/src/utils/*",
        "node_modules/lesgo/src/utils/*",
        "node_modules/@types/lesgo/utils/*"
      ],
      "constants/*": ["src/constants/*"],
      "config/*": ["src/config/*"],
      "core/*": ["src/core/*"],
      "exceptions/*": ["src/exceptions/*"],
      "handlers/*": ["src/handlers/*"],
      "middlewares/*": ["src/middlewares/*"],
      "models/*": ["src/models/*"],
      "services/*": ["src/services/*"],
      "utils/*": ["src/utils/*"],
      "lesgo/exceptions/*": [
        "node_modules/lesgo/src/exceptions/*",
        "node_modules/@types/lesgo/exceptions/*"
      ],
      "lesgo/middlewares/*": [
        "node_modules/lesgo/src/middlewares/*",
        "node_modules/@types/lesgo/middlewares/*"
      ],
      "lesgo/services/*": [
        "node_modules/lesgo/src/services/*",
        "node_modules/@types/lesgo/services/*"
      ],
      "lesgo/utils/*": [
        "node_modules/lesgo/src/utils/*",
        "node_modules/@types/lesgo/utils/*"
      ]
    },
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": false,
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2018"],
    "rootDir": "./"
  },
  "exclude": ["node_modules", "config", "coverage", "**/*.spec.ts", ".build", "tests"]
}
